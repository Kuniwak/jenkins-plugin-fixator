#!/bin/bash -eu
set -o pipefail
set -x


# NOTE: This command do NOT resolve dependencies.
#       So, you should install all depended plugins.
function update-plugin() {
  local BASE_PATH="$(cd "$(dirname "$0")"; pwd)"
  local plugin_name

  plugin_name="$1"

  "$BASE_PATH/exec-jenkins-cli" install-plugin "$plugin_name"
}


update-plugin "$@"
